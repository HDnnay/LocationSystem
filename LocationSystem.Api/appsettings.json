{
  "ConnectionStrings": {
    "SqlServerConnectionString": "Server=localhost;Database=LocationSystemDb;User Id=sa;Password=123456;TrustServerCertificate=True;Trusted_Connection=True;MultipleActiveResultSets=true",
    //"SqlServerConnectionString": "Server=localhost,1434;Database=LocationSystem;User Id=sa;Password=Password123!;TrustServerCertificate=True;MultipleActiveResultSets=true",
    "Redis": "localhost:6379,password=123456,abortConnect=false",
    "SqliteConnectionString": "Data Source=./sqlite/test.db"
  },
  "RabbitMQ": {
    "HostName": "localhost",
    "Port": 5672,
    "UserName": "guest",
    "Password": "guest",
    "VirtualHost": "/"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "IpRateLimiting": {
    "EnableEndpointRateLimiting": false, // 设置为false时，限流规则将应用于所有端点
    "StackBlockedRequests": false,
    "RealIpHeader": "X-Real-IP",
    "ClientIdHeader": "X-ClientId",
    "HttpStatusCode": 429,
    "GeneralRules": [
      {
        "Endpoint": "*", // 通配符，匹配所有端点
        "Period": "30s", // 时间窗口：1分钟
        "Limit": 30 // 限制：60个请求
      },
      {
        "Endpoint": "*",
        "Period": "1h", // 时间窗口：1小时
        "Limit": 1000 // 限制：1000个请求
      }
    ]
  },
  "Jwt": {
    "SecretKey": "YourSecretKey1234567890YourSecretKey1234567890",
    "Issuer": "LocationSystemApi",
    "Audience": "LocationSystemClient",
    "AccessTokenExpirationMinutes": 10,
    "RefreshTokenExpirationDays": 7
  },
  "AllowedHosts": "*"
}
